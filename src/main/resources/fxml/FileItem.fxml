<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="70.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/16">
    <children>
        <ImageView fx:id="imageThumbnail" fitHeight="50.0" fitWidth="50.0" layoutX="14.0" layoutY="10.0"
                   pickOnBounds="true" preserveRatio="true"/>

        <Label fx:id="labelName" layoutX="74.0" layoutY="24.0" text="Somefile.txt" textFill="#8a8a8a">
            <font>
                <Font name="Decker" size="17.0"/>
            </font>
        </Label>

        <Button fx:id="download" layoutX="485.0" layoutY="22.0" prefHeight="26.0"
                prefWidth="103.0" text="Download">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="delete" layoutX="600.0" layoutY="22.0" prefHeight="26.0"
                prefWidth="103.0" text="Delete">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </children>
</Pane>
